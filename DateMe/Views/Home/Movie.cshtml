@model Movie
@{
    ViewData["Title"] = "Movie";
}
<h1>Add Movie</h1>
<form method="post">
    <input type="hidden" asp-for="MovieId"/>
    <label asp-for="CategoryId">Category:</label>
    <select asp-for="CategoryId" required>
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" required><br>

    <label asp-for="Year">Year:</label>
    <input asp-for="Year" type="number" required><br>

    <label asp-for="Director">Director:</label>
    <input asp-for="Director" required><br>

    <label asp-for="Rating">Movie Rating:</label>
    <select asp-for="Rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br>

    <label asp-for="Edited">Edited:</label>
    <input asp-for="Edited" type="checkbox"><br>

    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo"><br>

    <label asp-for="CopiedToPlex">CopiedToPlex:</label>
    <input asp-for="CopiedToPlex" type="checkbox"><br>

    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" maxlength="25"><br>

    <button type="submit">Submit</button>
    <div asp-validation-summary="All"></div>
</form>

